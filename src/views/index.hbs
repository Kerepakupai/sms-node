<div class="row">
     <div class="col-md-4">
         <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="write your message" autofocus>
            </div>

            <div class="form-group">
                <input type="password" name="phone" class="form-control text-security" placeholder="+56912345678" autocomplete="off">
            </div>
            <button class="btn btn-primary btn-block">
                SEND
            </button>
        </form>
     </div>
     <div class="col-md-8">
        {{#if messages}}
            <ul class="list-group" style="height: 50vh; overflow-y: auto;" id="messages">
                {{#each messages}}
                <li class="list-group-item list-group-item-info list-group-item-action">
                    <p>{{Body}}</p>
                    <span>{{hideNumber To}}</span>
                    <span>{{hideNumber From}}</span>
                    <span>{{timeAgo createdAt}}</span>
                </li>
            {{/each}}
            </ul>
        {{else}}
            <div class="alert alert-warning" role="alert">
                No messages yet
            </div>
        {{/if}}
     </div>
</div>
